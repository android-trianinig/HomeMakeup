<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menue2"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/drawer_img_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/drawer_user_image_disc"
        android:scaleType="center"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/white"
        app:riv_border_width="3dip"
        app:riv_corner_radius="35dip" />

    <TextView
        android:id="@+id/txt_user_name_drw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/user_name_ex"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/drawer_img_user"
        app:layout_constraintStart_toEndOf="@+id/drawer_img_user"
        app:layout_constraintTop_toBottomOf="@+id/drawer_img_user" />

    <TextView
        android:id="@+id/txt_user_address_drw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:text="Alexandria, Egypt"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_user_name_drw"
        app:layout_constraintStart_toEndOf="@id/txt_user_name_drw"
        app:layout_constraintTop_toBottomOf="@id/txt_user_name_drw" />


</androidx.constraintlayout.widget.ConstraintLayout>